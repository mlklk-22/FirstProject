<link rel="stylesheet" type="text/css" href="~/AssestsTestmonial/css/main.css">
</head>

                  <br /><br /><br /><br /><br />
   <section id="testimonial" class="testimonial">
                <div class="video_overlay">
                    <div class="container">
                        <div class="row">
                            <div class="main_testimonial sections text-center">
                                <div class="col-md-12" data-wow-delay="0.2s">
                                    <div class="main_teastimonial_slider text-center">

                                        <div class="single_testimonial">
                                            <div class="row">
                                                <div class="col-sm-8 col-sm-offset-2">
                                                    <i class="fa fa-quote-left"></i>
                                                    <h1>Do you have a comment?</h1>
                                                   <strong> <p>Tell us what you Think of our website, and if you have any criticism or advice, do not hesitate and tell us ! </p></strong>
                                                    <div class="single_test_author">
                                                     </div>
                                                </div>
                                            </div>
                                        </div>
                                       
                                         <div class="single_testimonial">
                                            <div class="row">
                                                <div class="col-sm-8 col-sm-offset-2">
                                                    <i class="fa fa-quote-left"></i>
                                                    <h3>All opinions are welcome, tell us what's on your mind </h3>
                                                        <div class="single_test_author">
                                                     </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </section>
            <br /><br /><br /><br /><br /><br /><br />
            <div class="contact1" >
		<div class="container-contact1" style="margin-left:250px;">
			<div class="contact1-pic js-tilt" data-tilt>
				<img src="~/AssestsTestmonial/images/SendTest-removebg-preview.png" alt="IMG">
			</div>

			<form class="contact1-form validate-form" asp-controller="Testmonials" asp-action="Create" method="post">
				<span class="contact1-form-title">
					rate us
				</span>

				<div class="wrap-input1 validate-input" data-validate = "Name is required">
					<input class="input1" type="text" name="FirstName" placeholder="First Name">
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
					<input class="input1" type="text" name="LastName" placeholder="Last Name">
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Message is required">
					<textarea class="input1" name="Message" placeholder="Message"></textarea>
					<span class="shadow-input1"></span>
				</div>

				<div class="container-contact1-form-btn">
					<button class="contact1-form-btn">
						<span>
							Send
							<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
						</span>
					</button>
				</div>
			</form>
		</div>
	</div>

 <section id="team" class="team">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="main_team sections">
                                <div class="row">
                                    <div class="head_title">
                                        <h3>tTestmonisal</h3>
                                        <div class="separator"></div>
                                    </div>
                                     @foreach (var item in Model)
                                     {
                            if (item.Status == "Accept")
                            {
                                <div class="col-sm-3 col-xs-12">
                                    <div class="single_team_content">
                                        <div >
                                            <img src="~/Images/backtest.jpg" alt="" width="450"/>
                                        </div>

                                        <div class="single_team_text_overlay" style="width:80%">
                                            <h4>@item.Firstname @item.Lastname</h4>
                                            <p>@item.Message</p>
                                        </div>

                                    </div>
                                </div>
                            }
                        }
                                        </div>
                                    </div> <!-- End of col-sm-4 -->
                                </div>

                            </div><!-- End of main team contant -->
                        </div>
                }
          </section>
     
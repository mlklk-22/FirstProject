@model IEnumerable<FirstProject.Models.Reservation>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard2.cshtml";
}

<head>
     <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />



    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />



    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
</head>

<h2>Reservation Page</h2>

<form asp-action="Index"  method="post">
               <label for="startDate">Start date</label>
               <input  type="date" class="form-control" name="startDate" placeholder="Start Date" />
                <label for="endDate">End Date</label>
               <input  type="date" class="form-control" name="endDate" placeholder="End Date" />
                  <br />
               <button type="submit" class="btn btn-danger"> search</button>
           </form>
<table class="table" id="example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timefrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timeto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsernameNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timefrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timeto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
               <img src="@Url.Content("~/Images/" + @item.Image)" width="100" height="100"/> 
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.CategoryNavigation.Categoryname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsernameNavigation.Username)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Hallnumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Hallnumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Hallnumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create">Create New</a>
</p>
<script>
$(document).ready(function() { $('#example').DataTable({ dom: 'Bfrtip', buttons: ['copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5'] }); });
</script>
